---
const { adoptStyles, mode = "open", ...props } = Astro.props;

let cssUrl = null; // TODO
---

<template shadowrootmode={mode} , {...props}>
	{
		adoptStyles === "inherit" && cssUrl && (
			<link rel="stylesheet" href={cssUrl} />
		)
	}

	<!--- this is an astro slot, not an HTML slot --->
	<slot />
</template>
